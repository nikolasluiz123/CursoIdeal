<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CursoIdeal" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.CursoIdeal.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CursoIdeal.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.CursoIdeal.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="rating_bar_small_indicator" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:progressTint">#f9d71c</item>
        <item name="android:secondaryProgressTint">#c2a505</item>
    </style>
    
    <style name="text_view_item_list_label">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/label_text_color</item>
    </style>

    <style name="text_view_item_list_value">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/value_text_color</item>
    </style>

    <style name="text_view_item_list_money_value">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_view_label">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/label_text_color</item>
    </style>

    <style name="text_view_value">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/value_text_color</item>
    </style>

    <style name="text_view_money_value">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_view_title_value">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/value_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>